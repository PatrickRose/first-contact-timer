{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@fc/components/*": ["./src/components/*"],
            "@fc/lib/*": ["./src/lib/*"],
            "@fc/pages/*": ["./src/pages/*"],
            "@fc/server/*": ["./src/server/*"],
            "@fc/types/*": ["./src/types/*"],
            "@fc/public/*": ["./public/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": [
        "__test__/**/*.ts",
        "next-env.d.ts",
        "src/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts"
    ]
}
